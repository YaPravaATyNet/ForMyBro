<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".Setting">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <ImageButton
            android:layout_width="@dimen/diameter"
            android:layout_height="@dimen/diameter"
            android:src="@drawable/ok"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="2dp"
            android:onClick="save"/>

        <ImageButton
            android:layout_width="@dimen/diameter"
            android:layout_height="@dimen/diameter"
            android:src="@drawable/close"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="2dp"
            android:onClick="close"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heap"
            android:textColor="#000000"
            android:fontFamily="@font/impact_regular"
            android:textSize="@dimen/text"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/count_heap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:fontFamily="@font/impact_regular"
            android:textSize="@dimen/text"
           />

    </LinearLayout>

    <SeekBar
        android:id="@+id/heap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:maxHeight="10dp"
        android:minHeight="1dp"
        android:max="6"
        android:progressDrawable="@drawable/seek_bg"
        android:thumb="@drawable/thumb"/>
        <!--android:min="3"-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stone"
            android:textColor="#000000"
            android:fontFamily="@font/impact_regular"
            android:textSize="@dimen/text"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/count_stone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:fontFamily="@font/impact_regular"
            android:textSize="@dimen/text"
            />

    </LinearLayout>

    <SeekBar
        android:id="@+id/stone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:maxHeight="10dp"
        android:minHeight="1dp"
        android:max="85"
        android:progressDrawable="@drawable/seek_bg"
        android:thumb="@drawable/thumb"/>
        <!--android:min="15"-->

</LinearLayout>